<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/bg_bar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_progress_pie_background"/>

    <com.time.cat.demo.button.ProgressPie
        android:id="@+id/pie_progress"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerInParent="true"/>

    <RelativeLayout
        android:id="@+id/layout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <View
            android:id="@+id/view_border"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_progress_pie_border"
            android:visibility="invisible"/>

        <View
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_run_stop"/>
    </RelativeLayout>

    <View
        android:id="@+id/button_stop_click_area"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/stop_run"
        android:textColor="@color/run_stop_text"
        android:textSize="10sp"/>
</RelativeLayout>